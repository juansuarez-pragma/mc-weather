  "item": [
    {
      "name": "Weather Forecast",
      "item": [
        {
          "name": "Get Weather - New York",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/weather/forecast?latitude=40.7128&longitude=-74.0060",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "weather", "forecast"],
              "query": [
                {
                  "key": "latitude",
                  "value": "40.7128",
                  "description": "New York latitude"
                },
                {
                  "key": "longitude",
                  "value": "-74.0060",
                  "description": "New York longitude"
                }
              ]
            },
            "description": "Get current weather forecast for New York coordinates"
          },
          "response": []
        },
